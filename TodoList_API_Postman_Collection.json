{
  "info": {
    "name": "TodoList Flask API",
    "description": "Complete API collection for testing TodoList Flask application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:5000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Get All Todos",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/todos/",
          "host": ["{{base_url}}"],
          "path": ["api", "todos", ""]
        }
      }
    },
    {
      "name": "Create Todo",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"judul\": \"Belajar Flask API\",\n  \"prioritas\": \"High\",\n  \"status\": false\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/todos/",
          "host": ["{{base_url}}"],
          "path": ["api", "todos", ""]
        }
      }
    },
    {
      "name": "Get Todo by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/todos/1",
          "host": ["{{base_url}}"],
          "path": ["api", "todos", "1"]
        }
      }
    },
    {
      "name": "Update Todo",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"judul\": \"Updated Todo Title\",\n  \"status\": true,\n  \"prioritas\": \"Medium\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/todos/1",
          "host": ["{{base_url}}"],
          "path": ["api", "todos", "1"]
        }
      }
    },
    {
      "name": "Delete Todo",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/todos/1",
          "host": ["{{base_url}}"],
          "path": ["api", "todos", "1"]
        }
      }
    },
    {
      "name": "Search Todos - By Keyword",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/todos/search?q=flask",
          "host": ["{{base_url}}"],
          "path": ["api", "todos", "search"],
          "query": [
            {
              "key": "q",
              "value": "flask"
            }
          ]
        }
      }
    },
    {
      "name": "Search Todos - By Priority",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/todos/search?prioritas=High",
          "host": ["{{base_url}}"],
          "path": ["api", "todos", "search"],
          "query": [
            {
              "key": "prioritas",
              "value": "High"
            }
          ]
        }
      }
    },
    {
      "name": "Search Todos - By Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/todos/search?status=selesai",
          "host": ["{{base_url}}"],
          "path": ["api", "todos", "search"],
          "query": [
            {
              "key": "status",
              "value": "selesai"
            }
          ]
        }
      }
    },
    {
      "name": "Create Todo - Validation Error (Empty Title)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"judul\": \"\",\n  \"prioritas\": \"High\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/todos/",
          "host": ["{{base_url}}"],
          "path": ["api", "todos", ""]
        }
      }
    },
    {
      "name": "Create Todo - Validation Error (Invalid Priority)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"judul\": \"Test Todo\",\n  \"prioritas\": \"Invalid\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/todos/",
          "host": ["{{base_url}}"],
          "path": ["api", "todos", ""]
        }
      }
    },
    {
      "name": "Get Non-existent Todo",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/todos/999",
          "host": ["{{base_url}}"],
          "path": ["api", "todos", "999"]
        }
      }
    }
  ]
}
